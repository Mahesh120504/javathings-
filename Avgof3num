import java.util.Scanner;
class Avg{
    public static void main(String args[]){
        int a,b,c;
        float A;
        Scanner S= new Scanner(System.in);
        System.out.println("Enter 3 numbers");
        a=S.nextInt();
        b=S.nextInt();
        c=S.nextInt();
        A=(a+b+c)/3;
        System.out.println("Average of 3 numbers is "+A);
        
    }
            
}
